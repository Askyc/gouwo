<mapper namespace="com.gouwo.mapper.AuthorityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gouwo.model.AuthorityModel">
        <id column="authority_id" property="authorityId" />
        <result column="role_id" property="roleId" />
        <result column="authority_code" property="authorityCode" />
        <result column="authority_name" property="authorityName" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
